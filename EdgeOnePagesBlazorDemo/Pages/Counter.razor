@page "/counter"

<PageTitle>Counter</PageTitle>

<MudPaper Class="pa-6">
    <MudStack Spacing="2">
        <MudText Typo="Typo.h4">计数器</MudText>
        <MudText Typo="Typo.subtitle1">通过 MudButton 快速体验交互。</MudText>
        <MudDivider />
        <MudText Typo="Typo.h5" role="status">
            当前计数：<MudChip Color="Color.Primary" Variant="Variant.Filled">@currentCount</MudChip>
        </MudText>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="IncrementCount">
            增加
        </MudButton>
    </MudStack>
</MudPaper>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
